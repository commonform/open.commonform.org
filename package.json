{
  "private": true,
  "name": "open.commonform.org",
  "description": "simple JSON-over-HTTP-post wrapper around a few Common Form utilities",
  "repository": "commonform/open.commonform.org",
  "license": "BlueOak-1.0.0",
  "dependencies": {
    "ajv": "^6.10.0",
    "commonform-critique": "^0.8.1",
    "commonform-docx": "^2.0.0",
    "commonform-html": "^2.0.0",
    "commonform-lint": "^3.0.0",
    "commonform-markdown": "^1.2.3",
    "commonform-markup-parse": "^1.1.0",
    "commonform-validate": "^1.0.1",
    "commonmark-to-commonform": "^2.0.0",
    "decimal-numbering": "^3.0.2",
    "ooxml-signature-pages": "^3.0.2",
    "outline-numbering": "^2.0.0",
    "pino": "^5.12.6",
    "pino-http": "^4.2.0"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "nyc": "^14.1.1",
    "reformat-json-files": "^1.0.1",
    "simple-concat": "^1.0.0",
    "standard": "^12.0.1",
    "tape": "^4.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**.json": [
      "reformat-json-files",
      "git add"
    ],
    "**.js": [
      "standard --fix",
      "git add"
    ]
  },
  "scripts": {
    "lint": "standard",
    "format": "standard --fix",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "test": "tape test/**.test.js"
  }
}
